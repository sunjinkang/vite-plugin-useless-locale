{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["dom", "ESNext"],
    "sourceMap": false,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "src",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
} 